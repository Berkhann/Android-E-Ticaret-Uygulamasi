<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/color_change_urun_icerik"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_prod"
        android:layout_width="144dp"
        android:layout_height="139dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:paddingLeft="6dp"
        android:paddingRight="4dp"
        app:srcCompat="@android:color/holo_blue_dark"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtProdName"
            android:layout_width="243dp"
            android:layout_height="85dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_x="144dp"
            android:layout_y="0dp"
            android:gravity="left|center"
            android:padding="2dp"
            android:text="TextView"
            android:textColor="#3f3030"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="145dp"
            tools:layout_editor_absoluteY="-2dp" />

        <TextView
            android:id="@+id/txtProdPrice"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_alignBottom="@+id/img_prod"
            android:layout_alignParentEnd="true"
            android:layout_x="145dp"
            android:layout_y="84dp"
            android:gravity="top|left|center"
            android:padding="2dp"
            android:text="TextView"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="145dp"
            tools:layout_editor_absoluteY="84dp" />

    </LinearLayout>

</LinearLayout>
